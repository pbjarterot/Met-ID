{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  
  "package": {
    "productName": "met-id",
    "version": "0.0.1"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          {"name": "pyinstaller/dist/metabolite", "sidecar": true},
          {"name": "pyinstaller/dist/metabolite_for_db", "sidecar": true},
          {"name": "pyinstaller/dist/regression", "sidecar": true},
          {"name": "pyinstaller/dist/validation", "sidecar": true}
        ]
        
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      },
      "fs": {
        "all": false,
        "copyFile": false,
        "createDir": false,
        "exists": false,
        "readDir": false,
        "readFile": false,
        "removeDir": false,
        "removeFile": false,
        "renameFile": false,
        "scope": ["$RESOURCE/*"],
        "writeFile": false
      }
    },
    "bundle": {
      "active": true,
      "externalBin": [
        "pyinstaller/dist/metabolite",
        "pyinstaller/dist/metabolite_for_db",
        "pyinstaller/dist/regression",
        "pyinstaller/dist/validation"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.farmbio.metid",
      "resources": [
        "DBs/*"
      ],
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "met-id",
        "width": 1900,
        "height": 1000,
        "decorations": false
      },
      {
        "width": 310,
        "height": 310,
        "decorations": false,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "transparent": true
      }
    ]
  }
}
